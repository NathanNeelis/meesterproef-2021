<%- include('includes/head.ejs'); %>

<header>
    <%- include('includes/header_logo.ejs'); %>
</header>

<main>
    <section class="registerUser">
        <div>
            <form action="/register" class="r-form" id="register_form" method="POST">
                <h2>Registreren bij Hipper</h2>
                <fieldset>
                    <legend>Account informatie</legend>
                    <p>Deze informatie is nodig om de registratie te voltooien</p>
                    <!-- username / email  -->
                    <label for="signupMail">Wat is uw e-mailadres?</label>
                    <input type="email" id="signupMail" name="signupMail" placeholder="e-mailadres" required>

                    <!-- password -->
                    <label for="signupPassword">Vul hier een wachtwoord in</label>
                    <input type="password" id="signupPassword" name="signupPassword" placeholder="wachtwoord" required>

                    <!-- <p>
                        <span class="importantInfo">
                            Dit is een prototype. Hou er rekening mee dat dit geen
                            beveiligde omgeving is.
                        </span>
                    </p> -->

                </fieldset>

                <fieldset>
                    <legend>Persoonlijke informatie</legend>
                    <p>Deze informatie is nodig om de registratie te voltooien</p>
                    <!-- name user  -->
                    <label for="fullName">Wat is uw volledige naam?</label>
                    <input type="text" id="fullName" name="fullName" placeholder="wat is uw naam?">

                    <!-- Age / birth date -->
                    <label for="birthDate">Wat is uw geboortedatum?</label>
                    <input type="date" id="birthDate" name="birthDate" placeholder="31-01-1990">

                    <!-- location  -->
                    <label for="location">Wat is uw woonplaats?</label>
                    <input type="text" id="location" name="location" placeholder="waar woont u?">

                </fieldset>

                <fieldset>
                    <legend>Hipper</legend>
                    <p>Deze informatie is nodig om data te lezen van uw PAM apparaat</p>
                    <!-- PAM client id  -->
                    <label for="pam_client_id">Hipper Client ID</label>
                    <input type="text" id="pam_client_id" name="pam_client_id" placeholder="20255">

                    <label for="hipperbox_id">Hipperbox ID</label>
                    <input type="number" id="hipperbox_id" name="hipperbox_id" placeholder="1096">

                    <!-- begin datum hipper  -->
                    <label for="startdate_hipper">Startdatum Hipper</label>
                    <input type="date" id="startdate_hipper" name="startdate_hipper" placeholder="31-01-2021">
                    <!-- TO DO: Current date in placeholder  -->
                </fieldset>


                <button form="register_form" type="submit" class="submitBtn">
                    Registreren
                </button>
            </form>

            <p class="redirectLogin">
                Al wel een account?
                <a href="/login">Log hier in</a>
            </p>
        </div>
    </section>

</main>


<%- include('includes/footer.ejs'); %>